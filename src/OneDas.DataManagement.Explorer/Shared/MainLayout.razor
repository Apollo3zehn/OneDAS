@inherits LayoutComponentBase
@inject OneDasExplorerStateManager StateManager

@if (this.StateManager.State == OneDasExplorerState.FirstStart)
{
    <StartupWizard />
}
else
{
    <div class="flex-row">
        <NavMenu />
    </div>

    <div class="main">
        @Body
    </div>
}

@code 
{
    protected override void OnParametersSet()
    {
        this.StateManager.PropertyChanged += (sender, e) =>
        {
            if (e.PropertyName == nameof(OneDasExplorerStateManager.State))
            {
                this.InvokeAsync(() =>
                {
                    this.StateHasChanged();
                });
            }
        };
    }
}

