<Project Sdk="Microsoft.NET.Sdk.Web">
  
  <PropertyGroup>
    <Description>Provides a web-based user interface to browse the HDF-based OneDAS database and export desired data.</Description>
    <IsPackable>true</IsPackable>
    <PackageTags>OneDAS HDF explorer export</PackageTags>
    <!--<PackAsTool>true</PackAsTool>-->
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <ToolCommandName>onedas-hdf</ToolCommandName>
    <TypeScriptToolsVersion>latest</TypeScriptToolsVersion>
  </PropertyGroup>
  
  <ItemGroup>
    <PackageReference Include="BuildBundlerMinifier" Version="3.2.435" />
    <PackageReference Include="FluentFTP" Version="29.0.1" />
    <PackageReference Include="MathNet.Numerics" Version="4.9.0" />
    <PackageReference Include="Microsoft.AspNetCore.Hosting.WindowsServices" Version="3.1.1" />
    <PackageReference Include="Microsoft.AspNetCore.SignalR.Protocols.NewtonsoftJson" Version="3.1.1" />
    <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="3.1.1" />
    <PackageReference Include="Microsoft.PowerShell.SDK" Version="7.0.0-rc.1" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
    <PackageReference Include="Serilog.Extensions.Logging.File" Version="2.0.0-dev-00039" />
    <PackageReference Include="System.CommandLine.Experimental" Version="0.3.0-alpha.19577.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\extensions\OneDas.Extension.Csv\OneDas.Extension.Csv.csproj" />
    <ProjectReference Include="..\..\extensions\OneDas.Extension.Famos\OneDas.Extension.Famos.csproj" />
    <ProjectReference Include="..\..\extensions\OneDas.Extension.Mat73\OneDas.Extension.Mat73.csproj" />
    <ProjectReference Include="..\OneDas.DataManagement.Types\OneDas.DataManagement.Types.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Resources\ErrorMessage.Designer.cs">
      <DependentUpon>ErrorMessage.resx</DependentUpon>
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
    </Compile>
  </ItemGroup>
  
  <ItemGroup>
    <Content Update="bundleconfig.json" CopyToPublishDirectory="Never" />
  </ItemGroup>
  
  <ItemGroup>
    <EmbeddedResource Update="Resources\ErrorMessage.resx">
      <CustomToolNamespace>OneDas.Hdf.Explorer</CustomToolNamespace>
      <LastGenOutput>ErrorMessage.Designer.cs</LastGenOutput>
      <Generator>ResXFileCodeGenerator</Generator>
    </EmbeddedResource>
  </ItemGroup>
      
</Project>
