<Project Sdk="Microsoft.NET.Sdk.Web">
  
  <PropertyGroup>
    <ApplicationIcon>$(ProjectDir)Resources\NetworkIcon.ico</ApplicationIcon>
    <OutputType>Exe</OutputType>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <TargetFramework>net47</TargetFramework>
    <TypeScriptToolsVersion>2.8</TypeScriptToolsVersion>
    <PlatformTarget>x64</PlatformTarget>
  </PropertyGroup>
  
  <ItemGroup>
    <PackageReference Include="BuildBundlerMinifier" Version="2.6.375" />
    <PackageReference Include="Microsoft.AspNetCore" Version="2.1.0-preview3-32122" />
    <PackageReference Include="Microsoft.AspNetCore.Hosting.WindowsServices" Version="2.1.0-preview3-32122" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc" Version="2.1.0-preview3-32122" />
    <PackageReference Include="Microsoft.AspNetCore.StaticFiles" Version="2.1.0-preview3-32169" />
    <PackageReference Include="Microsoft.AspNetCore.SignalR" Version="1.0.0-preview3-32122" />
    <PackageReference Include="OneDas.Hdf.Types" Version="1.0.0-alpha-6651-31730" />
    <PackageReference Include="OneDas.Plugin.DataWriter.Csv" Version="1.0.0-alpha-6643-25333" />
    <PackageReference Include="OneDas.Plugin.DataWriter.Mat73" Version="1.0.0-alpha-6651-31875" />
    <PackageReference Include="OneDas.Types" Version="1.0.0-alpha-6673-15582" />
  </ItemGroup>
  
  <ItemGroup>
    <DotNetCliToolReference Include="Microsoft.VisualStudio.Web.CodeGeneration.Tools" Version="1.0.1" />
  </ItemGroup>
  
  <ItemGroup>
    <Folder Include="wwwroot\lib\" />
    <Content Include="$(HOMEDRIVE)$(HOMEPATH)\.nuget\packages\HDF.PInvoke\1.10.1\build\**\*.dll" CopyToPublishDirectory="Always">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Update="**\tsconfig.json" CopyToPublishDirectory="Never" />
  </ItemGroup>
  
</Project>
