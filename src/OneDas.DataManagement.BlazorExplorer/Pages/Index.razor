@page "/"
@inherits AppStateComponentBase

@if (this.AppState.ClientState != ClientState.PrepareDownload)
{
    <div class="left-column">
        <SettingsBox />
    </div>
    <div class="center-column">
        <div class="campaign-box mat-elevation-z11">
            <CampaignBox />
        </div>
        <div class="channel-box mat-elevation-z11">
            @if (this.AppState.ClientState != ClientState.DataAvailability)
            {
                <ChannelBox />
            }
            else
            {
                <DataAvailabilityBox />
            }
        </div>
    </div>
    <div class="right-column">
        <div class="news-box mat-elevation-z11">
            <NewsTicker />
        </div>
        <div class="variable-box mat-elevation-z11">
            <DownloadBox />
        </div>
    </div>
}
else
{
    <div class="downloader mat-elevation-z11">
        <DownloadUI />
    </div>
}
